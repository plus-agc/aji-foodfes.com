---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Maintext from "../images/main-text.svg";
import HeaderTitle from "../images/header-title.svg";
import FooterDesc from "../images/footer__image-desc.svg";
import FooterBgSp from "../images/footer__image-sp.svg";
import Menubar from "../modules/Menubar.astro";
import MainImage from "../images/main-image.webp";
import MainImageSP from "../images/main-image-sp.webp";
import MainDesc from "../images/main-desc.webp";
import MainDescSP from "../images/main-desc-sp.webp";
---

<Layout title="あじがさわフードフェス2024">
  <Menubar />
  <header class="header">
    <div class="pc">
      <div class="header__image">
        <div class="container">
          <Image src={MainImage} alt="あじがさわフードフェス2024" />
        </div>
      </div>
      <div class="header__title">
        <div class="container">
          <Image
            src={Maintext}
            alt="メインテキスト"
            class="header__title-text"
          />
          <Image src={HeaderTitle} alt="あじがさわフードフェス2024" />
        </div>
      </div>
    </div>
    <div class="sp">
      <Image src={MainImageSP} alt="あじがさわフードフェス2024" />
    </div>
  </header>
  <main>
    <div class="main__desc">
      <div class="pc">
        <div class="container">
          <Image src={MainDesc} alt="あじがさわフードフェス2024" />
        </div>
      </div>
      <div class="sp">
        <Image src={MainDescSP} alt="あじがさわフードフェス2024" />
      </div>
    </div>
  </main>
  <footer>
    <div class="footer__image">
      <div class="container">
        <div class="forward">
          <Image src={FooterDesc} alt="概要欄" class="pc" />
          <Image src={FooterBgSp} alt="概要欄" class="sp" />
        </div>
      </div>
    </div>
  </footer>
</Layout>
<style lang="scss">
  header,
  main,
  footer {
    background-color: #fffcd1;
  }
  header {
    position: relative;
    z-index: 1;
  }
  main {
    padding: 5vw clamp(2rem, -4.154rem + 16.91vw, 9.375rem)
      clamp(2rem, -4.154rem + 16.91vw, 9.375rem)
      clamp(2rem, -4.154rem + 16.91vw, 9.375rem);
    @media (max-width: 767px) {
      margin-bottom: 50px;
    }
  }
  .container {
    max-width: 1280px;
    margin: 0 auto;
  }
  .header__image {
    width: 100%;
    position: relative;
    z-index: 1;
    .back {
      position: relative;
      z-index: 1;
    }
    .forward {
      position: absolute;
      bottom: -1rem;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 90%;
      height: auto;
      z-index: 3;
    }
    img {
      width: 100%;
      height: auto;
    }
  }
  .header__title {
    background-color: #330001;
    position: relative;
    padding: 5rem 5rem 1rem 5rem;
    z-index: 2;
    margin-top: -7rem;
    img {
      width: 100%;
      height: auto;
    }
    .header__title-text {
      width: 100%;
      height: auto;
      margin-top: -20rem;
    }
  }
  .main__desc {
    width: 100%;
    margin: 0 auto;
    img {
      width: 100%;
      height: auto;
    }
    .sp {
      img {
        margin-bottom: 1rem;
      }
    }
  }
  .footer__image {
    background-image: url(/images/footer-bg.svg);
    background-size: cover;
    background-position: top;
    .forward {
      padding: 3rem 0;
    }
    img {
      width: 100% !important;
      height: auto !important;
    }
  }
  .pc {
    display: none;
    @media (min-width: 768px) {
      & {
        display: block;
      }
    }
  }
  .sp {
    display: none;
    @media (max-width: 767px) {
      & {
        display: block;
      }
    }
    img {
      width: 100%;
      height: auto;
    }
  }
  h1 {
    font-size: clamp(1.125rem, 0.627rem + 2.03vw, 2.25rem);
    text-align: center;
    background-color: #e60012;
    color: #fff;
    margin-bottom: 5rem;
    width: fit-content;
    padding: 16px 32px;
    margin: 0 auto;
    border-radius: 16px;
  }
</style>
