<style lang="scss">
  // 変数定義
  $primary-color: #0047ba;
  $white: #fff;
  $grey: #dce7eb;
  $red: #ff6873;
  $mobile-breakpoint: 599px;
  $tablet-breakpoint: 900px;

  // ミックスイン
  @mixin mobile {
    @media (max-width: $mobile-breakpoint) {
      @content;
    }
  }
  @mixin tablet {
    @media (min-width: $mobile-breakpoint + 1) and (max-width: $tablet-breakpoint - 1) {
      @content;
    }
  }
  @mixin desktop {
    @media (min-width: $tablet-breakpoint) {
      @content;
    }
  }

  @mixin responsive-font($desktop-size, $mobile-size) {
    font-size: $desktop-size;
    @include mobile {
      font-size: $mobile-size;
    }
  }

  // プレースホルダーセレクタ
  %centered-content {
    max-width: 95%;
    margin: 0 auto;
  }

  %transition {
    transition: all 0.25s ease-in-out;
  }
  %no-select {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-touch-callout: none;
    user-select: none;
  }
  %flipIn {
    animation: flipdown 0.5s ease both;
  }

  // 色定義
  $colors: (
    "lightblue": #fffcd2,
    "brown": #510102,
    "pink": #feb3d2,
    "teal": #54c9bd,
    "lightteal": #c0e9e5,
    "red": #ff0000,
  );

  @each $name, $color in $colors {
    .bg-#{$name} {
      background-color: $color;
    }
  }

  .color-blue {
    color: $primary-color;
  }
  .color-white {
    color: $white;
  }

  // 基本レイアウト
  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  // ヘッダーセクション
  header .hero {
    @extend %centered-content;
    background-color: #330001;
    color: $white;
    border-radius: 1rem;

    .hero-inner {
      margin-top: 80px;
      padding: 2rem;

      h1 {
        @include responsive-font(5vw, 11vw);
        text-align: center;
        font-weight: 700;
        @include mobile {
          margin: 0;
        }
      }

      p {
        @include responsive-font(2vw, 5vw);
        font-weight: 600;
        text-align: center;
        line-height: 1.8;
      }
    }
  }

  // メインコンテンツ
  main {
    padding-bottom: 60px;

    .main_contents {
      @extend %centered-content;

      .main_contents-item {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        margin-top: 2rem;

        @include mobile {
          flex-direction: column;
        }

        %item-shared {
          position: relative;
          border-radius: 1rem;
          padding: clamp(1rem, 0.4rem + 3vw, 4rem);
        }

        .item_left {
          @extend %item-shared;
          flex: 1;
          overflow: hidden;

          h2,
          p {
            position: relative;
            z-index: 2;
          }

          h2 {
            @include responsive-font(2.5vw, 6vw);
            font-weight: 900;
          }

          p {
            @include responsive-font(2vw, 5vw);
            font-weight: 900;
          }

          img {
            width: 100%;
            height: auto;
            position: absolute;
            bottom: 115px;
            right: 0;
            z-index: 1;
            @include mobile {
              bottom: 0;
            }
          }
        }

        .item_right {
          flex: 1;

          h2 {
            @include responsive-font(clamp(3vw, 3vw, 2vw), 6vw);
          }
          h3 {
            @include responsive-font(clamp(2vw, 2.2vw, 1.8vw), 6vw);
          }
          p {
            @include responsive-font(clamp(2vw, 2.2vw, 3vw), 5vw);
            margin-bottom: 8px;
          }

          h2,
          h3,
          p {
            font-weight: 500;
          }

          ul {
            list-style-type: none;
            padding-left: 1em;

            li {
              margin-bottom: 8px;
              font-weight: 500;
              @include mobile {
                font-size: 5vw;
              }

              &:nth-of-type(1) {
                font-size: clamp(24px, 2vw, 2.2vw);
                width: fit-content;
                border-bottom: solid 2px $primary-color;
              }

              &:nth-of-type(2) {
                font-size: clamp(20px, 2vw, 1.6vw);
              }
            }
          }
        }

        .item_center {
          @extend %item-shared;
          display: flex;
          flex-wrap: wrap;
          gap: 0 clamp(1.875rem, 1.5rem + 1.88vw, 3.75rem);

          h3 {
            @include responsive-font(4vw, 10vw);
            font-weight: 900;
            width: 100%;
            @include mobile {
              text-align: center;
              margin: 1rem 0;
            }
          }

          ul {
            list-style-type: none;
            font-weight: 600;
            margin: 0;
            padding: 0;

            li {
              display: flex;
              gap: clamp(1rem, 0.6rem + 2vw, 3rem);
              p {
                position: relative;
                z-index: 2;
              }
            }
          }

          .item_image {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: clamp(1rem, 5vw, 6rem);
            @include mobile {
              padding: 2rem;
            }

            div {
              flex: 1;
              img {
                width: 100%;
                height: auto;
                margin: 0 auto;
              }
            }
          }

          .item_text {
            width: 65%;
            @include mobile {
              width: 100%;
            }

            h4 {
              @include responsive-font(3vw, 6vw);
              font-weight: 600;
              margin-top: 0;
              margin-bottom: 8px;
            }

            p {
              @include responsive-font(2.5vw, 5vw);
              font-weight: 600;
              margin-bottom: clamp(1rem, -0.4rem + 7vw, 8rem);
            }
          }
        }
      }
    }
  }

