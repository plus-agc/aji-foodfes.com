<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  // 共通の設定
  const commonScrollTriggerConfig = {
    start: "top bottom",
    end: "bottom top",
    scrub: 0.1,
  };

  // データYを取得する関数
  function getDataYBasedOnScreenSize() {
    return window.innerWidth < 600 ? "5vw" : "10vw";
  }

  // パララックス効果を適用する関数
  function applyParallax(wrap) {
    const y = wrap.getAttribute("data-y") || getDataYBasedOnScreenSize();
    gsap.to(wrap, {
      y: y,
      scrollTrigger: {
        trigger: wrap,
        ...commonScrollTriggerConfig,
      },
    });
  }

  // 初期設定
  gsap.utils.toArray(".js-parallax").forEach(applyParallax);

  // デバウンス関数
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }

  // リサイズイベントのデバウンス処理
  const debouncedResize = debounce(() => {
    gsap.utils.toArray(".js-parallax").forEach(applyParallax);
  }, 250);

  // リサイズイベントリスナー
  window.addEventListener("resize", debouncedResize);

  // ボックス内の画像アニメーション
  gsap.utils.toArray(".box").forEach((box) => {
    gsap.utils.toArray("img", box).forEach((img) => {
      gsap.fromTo(
        img,
        { scale: 1, autoAlpha: 0 },
        {
          scale: 1.1,
          autoAlpha: 1,
          scrollTrigger: {
            trigger: img,
            toggleActions: "play none none reverse",
            start: "top center",
            markers: false,
          },
        }
      );
    });
  });
</script>
