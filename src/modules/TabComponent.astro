        margin-bottom: 30px;
    }

    .section-title {
        max-width: 500px !important;
        width: 100%;
        height: auto !important;
    }

    .section-title img {
        width: 100% !important;
        height: auto !important;
    }

    .dukedon-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .dukedon-item {
        text-align: center;
        transition: transform 0.3s ease;
    }

    .dukedon-item:hover {
        transform: scale(1.05);
    }

    .dukedon-item img {
