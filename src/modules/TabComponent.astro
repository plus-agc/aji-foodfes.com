<style src="../styles/TabComponent.css"></style>

    .lanove {
        font-family: lanove;
    }

    .tab-container {
        width: 100%;
        max-width: 1920px;
        margin: 0 auto;
        font-family: "lanove", "Arial", sans-serif;
    }

    .tab-buttons {
        display: flex;
        border-bottom: 2px solid #40220f;
        margin-bottom: 20px;
        width: 100%;
    }

    .tab-button {
        flex: 1;
        padding: 20px 24px;
        background: #fff;
        border: none;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        color: #666;
        border-bottom: 3px solid transparent;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        border-radius: 8px 8px 0 0;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .tab-bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .tab-bg-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .tab-text {
        position: relative;
        z-index: 2;
        color: #40220f;
        text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
        font-weight: bold;
    }

    .tab-button:hover {
        color: #333;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(64, 34, 15, 0.2);
    }

    .tab-button:hover .tab-bg-image img {
        filter: brightness(1.05);
    }

    .tab-button:hover .tab-text {
        transform: scale(1.02);
    }

    .tab-button.active {
        color: #40220f;
        border-bottom-color: #40220f;
        transform: scale(1.02);
        box-shadow: 0 4px 15px rgba(64, 34, 15, 0.3);
    }

    .tab-button.active .tab-bg-image img {
        filter: brightness(1.1) contrast(1.1);
    }

    .tab-button.active .tab-text {
        color: #40220f;
        text-shadow:
            2px 2px 4px rgba(255, 255, 255, 0.9),
            0 0 8px rgba(255, 255, 255, 0.6);
        font-weight: bold;
        transform: scale(1.05);
    }

    .panel-content {
        max-width: 1440px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
        padding: 5rem;
        color: #40220f;
        text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.9);
    }

    /* dukedonコンテンツのスタイリング */
    .dukedon-container {
        width: 100%;
    }

    .dukedon-title-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .dukedon-title {
        width: 100%;
        max-width: 100%;
        height: auto;
        overflow: hidden;
    }

    .dukedon-section {
        margin-bottom: 40px;
    }

    .section-header {
